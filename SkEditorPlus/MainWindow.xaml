<hc:Window x:Class="SkEditorPlus.MainWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:hc="https://handyorg.github.io/handycontrol"
           mc:Ignorable="d"
           Title="SkEditor+"
           WindowStartupLocation="CenterScreen"
           ShowTitle="False"
           Height="450" 
           Width="800" Loaded="OnWindowLoad" WindowState="Maximized" Drop="WindowDrop">
    <hc:Window.NonClientAreaContent>
        <Grid x:Name="TitleBar">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image
				Grid.Column="0"
				Height="22"
				Margin="4 5"
				Source="Images/SkEditor.png"
				RenderOptions.BitmapScalingMode="HighQuality"/>
            <Menu
				x:Name="MenuStrip"
				Grid.Column="1"
				Background="Transparent"
				IsMainMenu="True"
				hc:MenuAttach.IsEnabledAnimation="True"
                hc:MenuAttach.AnimationMode="Fade"
				FontFamily="Open Sans Medium" Margin="0,2.5,0,0">
                <MenuItem
					x:Name="File_MenuItem"
					Header="Plik">
                    <MenuItem
						x:Name="Menu_NewFile"
						Header="Nowy"
						InputGestureText="Ctrl+N" Click="MenuNewFile"  />
                    <MenuItem
						x:Name="Menu_Open"
						Header="Otwórz"
						InputGestureText="Ctrl+O" Click="MenuOpenFile"  />
                    <MenuItem
						x:Name="Menu_Save"
						Header="Zapisz"
						InputGestureText="Ctrl+S" Click="MenuSave"  />
                    <MenuItem
						x:Name="Menu_SaveAs"
						Header="Zapisz jako"
						InputGestureText="Ctrl+Shift+S" Click="MenuSaveAs"  />
                    <MenuItem
						x:Name="Publish_SaveAs"
						Header="Opublikuj..."
						InputGestureText="Ctrl+Shift+P" Click="MenuPublish"  />

                    <MenuItem
						x:Name="Menu_CloseFile"
						Header="Zamknij"
						InputGestureText="Ctrl+W" Click="MenuCloseFile"  />
                </MenuItem>
                <MenuItem
					x:Name="Edit_MenuItem"
					Header="Edycja">
                    <MenuItem
						x:Name="Menu_Generate"
						Header="Wygeneruj komendę..."
						InputGestureText="Ctrl+Shift+G" Click="MenuGenerate"  />
                </MenuItem>
                <MenuItem
					x:Name="Other_MenuItem"
					Header="Inne">
                    <MenuItem
						x:Name="Menu_Settings"
						Header="Ustawienia"
						InputGestureText="Ctrl+Shift+O" Click="MenuSettings"  />
                </MenuItem>
            </Menu>
        </Grid>
    </hc:Window.NonClientAreaContent>
    
    <Grid>
        <hc:TabControl x:Name="tabControl" IsAnimationEnabled="True" ShowCloseButton="True" IsDraggable="True" IsScrollable="True" ShowOverflowButton="True" SelectionChanged="TabChanged" TabItemWidth="150"  hc:TabItem.Closed="TabClosed" ShowContextMenu="False" AllowDrop="True"/>
    </Grid>

    <hc:Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" Executed="ShortCutNewFile"/>
        <CommandBinding Command="ApplicationCommands.Open" Executed="ShortCutOpen"/>
        <CommandBinding Command="ApplicationCommands.Save" Executed="ShortCutSave"/>
        <CommandBinding Command="ApplicationCommands.SaveAs" Executed="ShortCutSaveAs"/>
        <CommandBinding Command="ApplicationCommands.Close" Executed="ShortCutClose"/>
    </hc:Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="N" Command="ApplicationCommands.New"/>
        <KeyBinding Modifiers="Ctrl" Key="O" Command="ApplicationCommands.Open"/>
        <KeyBinding Modifiers="Ctrl" Key="S" Command="ApplicationCommands.Save"/>
        <KeyBinding Modifiers="Ctrl+Shift" Key="S" Command="ApplicationCommands.SaveAs"/>
        <KeyBinding Modifiers="Ctrl" Key="W" Command="ApplicationCommands.Close"/>
    </Window.InputBindings>
</hc:Window>
